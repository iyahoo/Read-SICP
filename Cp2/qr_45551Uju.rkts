;; ex 2.45

(define (split f g)
  (lambda [painter n]
    (let loop ([painter painter] [n n])
      (if (= n 0)
          painter
          (let ((smaller (loop painter (- n 1))))
            (f painter (g smaller smaller)))))))

(define right-split-new (split beside below))
(define up-split-new (split below beside))

