(define (below2-1 p1 p2)
  (let* ((split-point (make-vect2 0.0 0.5))
         (paint-top (transform-painter2 p2
                                        (make-vect2 0.0 0.0)
                                        (make-vect2 1.0 0.0)
                                        split-point))
         (paint-bottom (transform-painter2 p1
                                           split-point
                                           (make-vect2 1.0 0.5)
                                           (make-vect2 0.0 1.0))))
    (lambda (frame)
      (paint-top frame)
      (paint-bottom frame))))

(define (below2-2 p1 p2)
  (rotate270 (beside2 (rotate90 p1) (rotate90 p2))))

